<!DOCTYPE html>
<html lang="fr">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
      {% block title %}
        KoreanIsta
      {% endblock %}
    </title>
    <link rel="icon" href="data:image/svg+xml,%3Csvg%20xmlns=%22http://www.w3.org/2000/svg%22%20width=%2240%22%20height=%2240%22%20viewBox=%22-12%20-12%2024%2024%22%3E%0A%20%20%20%20%3Cpath%20fill=%22%23cd2e3a%22%20d=%22M0-12a12%2012%200%200%201%200%2024z%22/%3E%0A%20%20%20%20%3Cpath%20fill=%22%230047a0%22%20d=%22M0-12a12%2012%200%200%200%200%2024A6%206%200%200%200%200%200z%22/%3E%0A%20%20%20%20%3Ccircle%20cy=%22-6%22%20fill=%22%23cd2e3a%22%20r=%226%22/%3E%0A%3C/svg%3E" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/flowbite/1.4.7/flowbite.min.css" rel="stylesheet">

    {% block stylesheets %}
    {% endblock %}

    {% block javascripts %}
      {% block importmap %}
      <script src="https://cdnjs.cloudflare.com/ajax/libs/flowbite/1.4.7/flowbite.min.js"></script>
        {{ importmap('app') }}
      {% endblock %}
    {% endblock %}
  </head>
  <body class=" text-gray-900 font-sans">
    <header class="bg-white shadow-md py-4">
      <div class="container mx-auto">
        {{ include('nav.html.twig') }}
      </div>
    </header>

    {# FLASH MESSAGES #}
    <div class ="container mx-auto mt-6">
      {% for message in app.flashes('success') %}
        <div class="bg-green-100 border-l-4 border-green-500 text-green-700 p-4 mb-4 rounded-lg shadow-sm transition-all duration-300 ease-in-out transform hover:scale-105" role="alert">
          <p class="font-bold">Succ√®s</p>
          <p>{{ message }}</p>
        </div>
      {% endfor %}
      {% for message in app.flashes('error') %}
        <div class="bg-red-100 border-l-4 border-red-500 text-red-700 p-4 mb-4 rounded-lg shadow-sm transition-all duration-300 ease-in-out transform hover:scale-105" role="alert">
          <p class="font-bold">Erreur</p>
          <p>{{ message }}</p>
        </div>
      {% endfor %}
    </div>

    <main class="container mx-auto py-8 px-4">
      {% block body %}
      {% endblock %}
    </main>
    
    <footer class="bg-gray-100 mt-8 py-4 border-t border-gray-200 "> 
      {{ include('footer.html.twig') }}
    </footer>
  </body>
</html>

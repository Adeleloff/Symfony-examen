{% extends 'base.html.twig' %}

{% block body %}
  <div class="max-w-4xl mx-auto py-12 px-4 sm:px-6 lg:px-8">
    

    <h1 class="text-center text-5xl font-bold text-black mb-8">{{ lesson.title }}</h1>
    

    <div class="mb-6">
      <video class="w-full h-auto rounded-lg shadow-lg" controls>
        <source src="{{ asset('uploads/lesson/' ~ lesson.videoFilename) }}" type="video/mp4">
          Votre navigateur ne supporte pas la lecture des vidéos.
        </video>
    </div>


    <div class="text-gray-500 text-sm mb-6 flex justify-between items-center">
      <p class="font-medium">Enseignant : {{ lesson.teacher.lastName }} {{ lesson.teacher.firstName }}</p>
      <p>Date de création : {{ lesson.createdAt|date('d/m/Y') }}</p>
    </div>


    <div class="bg-white shadow-lg rounded-lg p-6 mb-6 border-l-4 border-red-600">
      <p class="text-black text-lg">{{ lesson.content }}</p>
    </div>


    <div class="text-right">
      <a href="{{ path('home_page') }}" class="inline-block bg-red-600 text-white font-bold py-2 px-4 rounded shadow-md hover:bg-red-700">Retour à l'Accueil</a>
    </div>

  </div>
{% endblock %}

{% extends 'base.html.twig' %}

{% block body %}
  <div class="max-w-4xl mx-auto py-12 px-4 sm:px-6 lg:px-8">
    <!-- Titre de la leçon -->
    <h1 class="text-center text-5xl font-bold text-gray-900 mb-8">{{ lesson.title }}</h1>

    <!-- Contenu de la leçon -->
    <div class="bg-white shadow-lg rounded-lg p-6 mb-6">

      <!-- Enseignant et date -->
      <div class="text-gray-500 text-sm mb-6">
        <p class="font-medium">Enseignant : {{ lesson.teacher.lastName }} {{ lesson.teacher.firstName }}</p>
        <p>Date de création : {{ lesson.createdAt|date('d/m/Y') }}</p>
      </div>

      <!-- Vidéo -->
      <div class="mb-6">
        <video class="w-full rounded-lg shadow-md" controls>
          <source src="{{ asset('uploads/lesson/' ~ lesson.videoFilename) }}" type="video/mp4">
          Votre navigateur ne supporte pas la lecture des vidéos.
        </video>
      </div>

      <p class="text-lg text-gray-700 leading-relaxed mb-4">{{ lesson.content }}</p>

      <!-- Bouton Retour ou autre action -->
      <div class="text-center mt-8">
        <a href="{{ path('home_page') }}" class="px-4 py-2 bg-blue-500 text-black font-semibold rounded-lg shadow-md hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-400 focus:ring-opacity-75">
          Revenir à l'accueil
        </a>
      </div>
    </div>
  </div>
{% endblock %}
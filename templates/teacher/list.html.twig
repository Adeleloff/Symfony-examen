{% extends 'base.html.twig' %}

{% block title %}
  Nos Enseignants
{% endblock %}

{% block body %}
    <div class="container mx-auto mt-10">
        <h1 class="text-4xl font-bold text-center text-blue-600 mb-8">Liste des Professeurs</h1>
        
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            {% for teacher in teachers %}
            <div class="bg-white rounded-lg shadow-md p-6">
                <div class="flex items-center space-x-4">
                    <div class="mb-6 flex justify-center">
                        <img
                        src="{{ asset('/uploads/teacher/' ~ teacher.profilePicFilename) }}"
                        alt="{{ teacher.lastName }}"
                        class="rounded-full max-h-[150px]"
                        />
                    </div>
                    <div>
                        <h2 class="text-xl font-semibold text-gray-800">{{ teacher.firstName }} {{ teacher.lastName }}</h2>
                        <p class="text-sm text-gray-500">Né le {{ teacher.dateOfBirth|date("d/m/Y") }}</p>
                    </div>
                </div>
                <p class="mt-4 text-gray-700">{{ teacher.description }}</p>
                <p class="mt-4 text-sm text-gray-500">Diplomé le : {{ teacher.enrollmentDate|date("d/m/Y") }}</p>
                <p class="mt-4 text-gray-700">{{ teacher.description }}</p>

                <a href="{{ path('teacher_item', { 'id': teacher.id }) }}" class="mt-4 inline-block bg-blue-500 text-white px-4 py-2 rounded-lg hover:bg-blue-600">
                    Voir le profil
                </a>
            </div>
            {% else %}
            <p class="col-span-full text-center text-gray-600">Aucun professeur trouvé.</p>
            {% endfor %}
        </div>

    </div>

    <div class="mt-12 text-center">
        <p class="text-lg font-medium text-gray-700 mb-4">
            Vous voulez devenir Enseignant chez nous ?
        </p>
        <a href="{{ path('teacher_new') }}" class="inline-block px-6 py-2 bg-green-500 text-white font-semibold rounded-lg hover:bg-green-600 transition duration-300">
            Inscrivez-vous ICI !
        </a>
    </div>
</div>
{% endblock %}

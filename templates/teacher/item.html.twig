{% extends 'base.html.twig' %}

{% block body %}

<div class="max-w-4xl mx-auto py-12 px-4 sm:px-6 lg:px-8">
  <!-- Photo de profile -->
  <div class="mb-6 flex justify-center">
    <img
      src="{{ asset('/uploads/teacher/' ~ teacher.profilePicFilename) }}"
      alt="{{ teacher.lastName }}"
      class="rounded-full max-h-[150px]"
    />
  </div>

  <!-- Contenu du profile -->
  <div class="bg-white shadow-lg rounded-lg p-6 mb-6">

    <!-- Nom du professeur -->
    <h1 class="text-center text-5xl font-bold text-gray-900 mb-8">{{ teacher.lastName }} {{ teacher.firstName }}</h1>

    <!-- Date de naissance et date d'obtention du diplome -->
    <div class="text-gray-500 text-sm mb-6">
      <p class="font-medium">Date de naissance : {{ teacher.dateOfBirth|date('d/m/Y') }}</p>
      <p>Date d'obtention du diplôme : {{ teacher.enrollmentDate|date('d/m/Y') }}</p>
    </div>

    <div class="text-gray-500 text-sm mb-6">
      <p class="text-lg text-gray-700 leading-relaxed mb-4">Description :<br> {{ teacher.description }}</p>
    </div>

    <!-- Bouton Retour ou autre action -->
    <div class="text-center mt-8">
      <a href="{{ path('teacher_list') }}" class="px-4 py-2 bg-blue-500 text-white font-semibold rounded-lg shadow-md hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-400 focus:ring-opacity-75">
        Retour à la liste de nos professeurs
      </a>
    </div>
  </div>
</div>
{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}
  Catégories
{% endblock %}

{% block body %}
  <h1 class="text-5xl text-center font-bold mb-8 text-gray-800">{{ category.name }}</h1>

  <ul class="flex flex-col gap-4 items-center">
      {% for subcategory in category.subcategories %}
      <li class="w-full md:w-2/3 lg:w-1/2 bg-white p-4 text-gray-900 shadow-lg rounded-lg hover:shadow-2xl transition-shadow duration-300">
          <a href="{{ path('subcategory_item', { id: subcategory.id }) }}" class="block text-center uppercase text-2xl font-semibold hover:text-gray-600 transition-colors duration-300">
              {{ subcategory.name }}
          </a>
      </li>
      {% endfor %}
  </ul>
  <div class="mt-12 text-center">
    <a href="{{ path('home_page') }}" class="px-6 py-2 bg-blue-500 text-white font-semibold rounded-lg hover:bg-blue-600 transition duration-300">Revenir à l'accueil</a>
  </div>
{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}
  Nos Catégories
{% endblock %}

{% block body %}
    <h1 class="text-4xl font-bold text-center my-6">Nos Catégories</h1>

    <ul class="flex flex-col gap-2 justify-center">
        {% for category in categories %}
        <li class="p-4 bg-footer text-black shadow-xl uppercase text-2xl">
            <a href="{{ path('category_item', { id: category.id }) }}">{{ category.name }}</a>
        </li>
        {% endfor %}
    </ul>

{% endblock %}

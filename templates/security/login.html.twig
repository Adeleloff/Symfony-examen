{% extends 'base.html.twig' %}

{% block title %}Se connecter{% endblock %}

{% block body %}
<div class="min-h-screen flex items-center justify-center">
    <div class="bg-white p-8 rounded-lg shadow-lg w-full max-w-md">
        <h1 class="text-2xl font-bold text-center mb-6">Login</h1>
        
        <form method="post">
            {% if error %}
                <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-4">
                    {{ error.messageKey|trans(error.messageData, 'security') }}
                </div>
            {% endif %}

            {% if app.user %}
                <div class="bg-blue-100 border border-blue-400 text-blue-700 px-4 py-3 rounded relative mb-4">
                    Vous êtes connecté en tant que {{ app.user.userIdentifier }}, 
                    <a href="{{ path('app_logout') }}" class="text-blue-500 hover:text-blue-700 font-semibold">Déconnexion</a>
                </div>
            {% endif %}

            <div class="mb-4">
                <label for="username" class="block text-gray-700">Email</label>
                <input type="email" value="{{ last_username }}" name="_username" id="username" 
                       class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" 
                       autocomplete="email" required autofocus>
            </div>

            <div class="mb-6">
                <label for="password" class="block text-gray-700">Mot de passe</label>
                <input type="password" name="_password" id="password" 
                       class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" 
                       autocomplete="current-password" required>
            </div>

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            <div class="flex justify-between items-center mb-4">
                <a href="{{ path('forgot_password') }}" class="text-sm text-blue-500 hover:text-blue-700">Mot de passe oublié ?</a>
            </div>

            <button class="w-full bg-gradient-to-r from-blue-500 to-purple-500 text-white font-bold py-2 px-4 rounded-md hover:from-blue-600 hover:to-purple-600 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-opacity-50">
                Se connecter
            </button>
        </form>

        <div class="mt-6 text-center">
            <p class="text-gray-600">Vous n'avez pas de compte ? 
                <a href="{{ path('teacher_new') }}" class="text-blue-500 hover:text-blue-700 font-semibold">S'inscrire</a>
            </p>
        </div>
    </div>
</div>
{% endblock %}
